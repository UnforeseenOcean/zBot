me.NPCHasMenu = function(unit, type)
{
   return ArrayHas(unit.getMenuEntries(), type);
};

me.LeftSpell = null;
me.RightSpell = null;

me.SetSpell = function(Spell, Left)
{
    if(Left == 1)
		me.LeftSpell = Spell
	else
	    me.RightSpell = Spell;
		
	me.setSkill(Spell, Left);
};

